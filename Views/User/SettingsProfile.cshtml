@model User
<style>
    .red-warning {
        color: red;
        padding: 5px;
        margin-top: 10px;
    }
    .column{
        display: flex;
        flex-direction: column;
    }
    p{
        margin-top: 10px;
        margin-bottom: -4px;
    }
</style>
<form class="column" action="/User/SettingsForUserPost" method="post">
    <input type="text" name="trueUserName" value="@Model.UserName" hidden>

    <p>Изменнить имя:</p>
    <input type="text" name="name" value="@Model.UserName">
    <p>Роль:</p>
    <input type="text" name="role" value="@Model.Role" readonly>
    <p>Изменить пароль:</p>
    <input type="text" name="password">

    <input type="text" name="prevHashPassword" value="@Model.HashPassword" hidden>

    <input type="submit" class="red-warning" value="Изменить данные профиля"></button>
</form>
<form action="/User/Delete">
    <input type="text" name="username" value="@Model.UserName" hidden>
    <input class="red-bg-warning" type="submit" value="Удалить профиль">
</form>